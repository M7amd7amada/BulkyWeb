@model IEnumerable<Product>?

<div class="container text-center">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>

        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Product" asp-area="Customer" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product Title</th>
                <th>ISPN</th>
                <th>Author</th>
                <th>List Price</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model ?? Enumerable.Empty<Product>())
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.ISPN</td>
                    <td>@item.Author</td>
                    <td>@item.ListPrice</td>
                    <td>
                        <a class="btn btn-primary mx-2"
                            asp-route-id="@item.ProductId"
                            asp-controller="Product"
                            asp-area="Customer" asp-action="Update">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a class="btn btn-danger mx-2"
                            asp-route-id="@item.ProductId"
                            asp-controller="Product"
                            asp-area="Customer" asp-action="Delete">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>