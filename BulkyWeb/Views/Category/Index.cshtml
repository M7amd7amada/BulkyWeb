@model IEnumerable<Category>?

@{
    ViewData["Title"] = "Category";
}

<div class="container text-center">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>

        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model ?? Enumerable.Empty<Category>())
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <a class="btn btn-primary mx-2"
                            asp-route-id="@item.CategoryId"
                            asp-controller="Category" asp-action="Update">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a class="btn btn-danger mx-2"
                            asp-route-id="@item.CategoryId"
                            asp-controller="Category" asp-action="Delete">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>